<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/tvRoomName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:lineSpacingExtra="-5sp"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Room name" />

            <TextView
                android:id="@+id/tvHost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvRoomName"
                android:layout_alignParentStart="true"
                android:layout_marginTop="0dp"
                android:textSize="14sp"
                tools:text="host: carlo" />

            <TextView
                android:id="@+id/tvChatEnable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvHost"
                android:layout_alignParentStart="true"
                android:layout_marginTop="0dp"
                android:textSize="12sp"
                tools:text="chat: enabled" />

            <TextView
                android:id="@+id/tvTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvChatEnable"
                android:textSize="12sp"
                tools:text="tags: tags tags tags" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTags"
                android:layout_marginTop="5dp"
                android:text="description"
                android:textSize="12sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/ivLocked"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            tools:visibility="visible" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>