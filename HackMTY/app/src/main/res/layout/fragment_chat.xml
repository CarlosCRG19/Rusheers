<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ChatFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/chatBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_top"
            android:backgroundTint="@color/darkest_grey">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Programming"

                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans_bold"


                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"

                />

            <ImageView
                android:id="@+id/ivChat"
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:layout_centerVertical="true"
                android:layout_marginStart="24dp"

                tools:srcCompat="@tools:sample/avatars" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/chatBar"
            android:layout_marginBottom="50dp"
            />

        <RelativeLayout
            android:id="@+id/rlMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            >

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:ems="10"
                android:hint="Escribe un mensaje"
                android:fontFamily="@font/open_sans"
                android:inputType="text"
                android:paddingHorizontal="6dp"
                android:textColor="@color/darkest_grey"
                android:textColorHint="@color/dark_grey"

                android:background="@drawable/rounded_message"
                app:backgroundTint="@color/light_grey"
                android:padding="8dp"
                />

            <ImageButton
                android:id="@+id/ibSend"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_toEndOf="@+id/etMessage"
                android:layout_marginStart="5dp"

                android:background="@drawable/rounded_message_button"
                android:padding="10dp"
                android:src="@drawable/ic_round_send_24" />
        </RelativeLayout>


    </RelativeLayout>

</FrameLayout>